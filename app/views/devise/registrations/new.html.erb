<div class="album-background-img">
  <div class="padding-top"><br><br><br></div>
    <div class="well deviseWell">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <div class="col-md-4 col-md-offset-2">
        <%= f.label :email, :style => "color: white;" %><br />
      </div>
      <%= f.email_field :email, autofocus: true %>
      <br><br>
    </div>

    <div class="field">
      <span class="col-md-4 col-md-offset-2">
        <%= f.label :password, :style => "color: white;" %>
      </span>
      <%= f.password_field :password, autocomplete: "off" %>
      <br><br>
    </div>

    <div class="field">
      <div class="col-md-4 col-md-offset-2">
        <%= f.label :password_confirmation, :style => "color: white;" %><br />
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <br><br>
    </div>
    <div class="actions">
      <div class="col-md-offset-3">
        <%= f.submit "Sign up" %>
      </div>
    </div>
  <% end %>
  </div>
</div>
