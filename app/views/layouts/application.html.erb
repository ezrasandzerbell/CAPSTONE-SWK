<!DOCTYPE html>
<html>
  <head>

    <title>Songwriter's Key</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <!-- PageHeader / Site Logo -->

    <div class="page-header">
      <%= image_tag "swklogo.jpg"%>
    </div>

    <!-- End of PageHeader / Site Logo -->

    <!-- MAIN BODY - YIELD -->

    <%= yield %>

    <!-- End of MAIN BODY - YIELD -->

    <!-- Footer / Navigation Conditions -->

    <div class="page-footer">
      <div class="row">
        <div class="col s4 m4 l4">
          <ul>
            <% if current_user %>
              <li><%= current_user.email %></li>
            <% end %>
              <li><a href="/" class=" logo-size">Home Page</a></li>
            <% if current_user %>
              <li><%= link_to "View My Products", products_path, :class => 'main-links' %> </li>
              <li><%= link_to "Log-out", destroy_user_session_path, method: "delete" %></li>
            <% else %>
              <li>  <%= link_to "Log-in", new_user_session_path %> | <%= link_to "Signup", new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <!-- End of Footer / Navigation Conditions -->

  </body>
</html>
