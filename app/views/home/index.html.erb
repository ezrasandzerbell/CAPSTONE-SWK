<% if @user %>

    <br>
    <% if @user.albums %>
      <h1 style="text-align: center; margin-bottom: 25px;">Album List</h1>
      <div class="row">
        <div class="col-md-3 home_riff_tile" style="background-size: 30vh 20vw;">
            <h4><%= link_to image_tag('new-song.png', :style => "padding-left: 50%; padding-top: 50%; transform: translate(-25%, -25%);"), new_user_album_path(@user) %></h4>
        </div>
        <% @user.albums.each do |album| %>
          <div class="col-md-3 home_album_tile" style="background-color: blue; color: black">
            <div class="home_album_text">
              <h4 style="text-align: center;"><%= link_to album.title, user_album_path(@user, album) %></h4>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
    <%= link_to "Create new album", new_user_album_path(@user) %>
    <% end %>
<% else %>
  <h2><%= link_to "Log-in", new_user_session_path %> | <%= link_to "Signup", new_user_registration_path %></h2>
<% end %>
