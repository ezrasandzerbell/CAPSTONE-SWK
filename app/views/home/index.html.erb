<% if @user %>
  <%= link_to "Click here to create a new song.", new_user_song_path(@user) %>
  <br>
  <% if @user.songs %>
    <h2>Song List</h2>
    <% @user.songs.each do |song| %>
      <h4><%= link_to song.title, user_song_path(@user, song) %></h4>
    <% end %>
  <% end %>
<% else %>
  <h2><%= link_to "Log-in", new_user_session_path %> | <%= link_to "Signup", new_user_registration_path %></h2>
<% end %>
